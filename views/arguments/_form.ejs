<div class="field mb-3">
  <span>Side: </span>
  <input class="form-check-input" type="radio" name="side" id="side-yes" value="yes" <%= argument.side === true ? 'checked' : '' %>>
  <label class="form-label" for="side-yes">Yes</label>
  <input class="form-check-input" type="radio" name="side" id="side-no" value="no" <%= argument.side === false ? 'checked' : '' %>>
  <label class="form-label" for="side-no">No</label>
</div>

<div class="field mb-3">
  <textarea class="form-control <%= errorClass(argument.errors, 'body') %>" id="body" name="body" autofocus><%= argument.body %></textarea>
  <%- errorMessage(argument.errors, 'body') %>
</div>

<div>
  <button class="btn btn-primary" type="submit">Submit</button>
</div>