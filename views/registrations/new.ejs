<%- include('../partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h2 class="mb-4">Sign up</h2>

        <%- include('../partials/_oauth', {action: 'Sign up'}) %>

        <div class="line-with-text mb-3">
          <div>OR</div>
        </div>

        <form action="/users/sign_up" method="post">
          <div class="field">
            <label class="form-label" for="email">Email</label>
            <input class="form-control <%= errorClass(errors, 'email') %>" id="email" name="email" type="text" autocomplete="email" value="<%= user.email %>" required autofocus>
            <%- errorMessage(errors, 'email') %>
          </div>
          <div class="field mb-3">
            <label class="form-label" for="current-password">Password</label>
            <input class="form-control <%= errorClass(errors, 'password') %>" id="current-password" name="password" type="password" value="" required>
            <%- errorMessage(errors, 'password') %>
          </div>
          <div class="actions mb-3 d-grid">
            <button class="btn btn-primary" type="submit">Sign up</button>
          </div>
        </form>      
        <div>
          <small>Already have an account? <a href="/users/sign_in">Sign in</a></small>
        </div>
      </div>
    </div> 
  </div>
</div>

<%- include('../partials/footer') %>